@model List<Product>;
@{
    ViewData["Title"] = "Home Page";
    var products = Model;
    @* var categories = ViewBag.Category; *@
    @* var categories = ViewBag["Category"]; *@
}

<div class="text-center">
    <h1 class="display-4">Welcome Product</h1>
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quanty</th>
            <th>Category</th>
            <th>
                <a href="/Product/Create" class="btn btn-primary">Create</a>
            </th>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.Category.Name</td>
                    <td>
                        <a href="/Product/Update?id=@product.Id" class="btn btn-success">Update</a>
                        <a href="/Product/Delete?id=@product.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>    
</div>
